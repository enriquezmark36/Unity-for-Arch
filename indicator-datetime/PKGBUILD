# vercheck-pkgbuild: auto
# vercheck-ubuntu: name=${pkgname}, repo=xenial
# vercheck-launchpad: name=${pkgname}

pkgname=indicator-datetime
_actual_ver=15.10
_extra_ver=+16.04.20160129
pkgver=${_actual_ver}${_extra_ver/+/.}
pkgrel=1
pkgdesc="A very, very simple clock"
arch=(i686 x86_64)
url="https://launchpad.net/indicator-datetime"
license=(GPL)
depends=(evolution-data-server gstreamer libtimezonemap properties-cpp
         unity-control-center)
makedepends=(intltool cmake)
groups=(unity)
install=${pkgname}.install
source=("https://launchpad.net/ubuntu/+archive/primary/+files/${pkgname}_${_actual_ver}${_extra_ver}.orig.tar.gz"
        0001-Get-timezone-from-systemd-s-timedate1-interface.patch
        0002-Not-a-phone.patch
        0003-Add-support-for-EDS-3.16-API.patch)
sha512sums=('3c84758a8f0cb410b773b80a4311a46ca54d0ff6c98fa176e1cb4a6f88532157931be9cf5b343cbae91820217be01b5a0a37992b47db398d6c0be0839403218e'
            'bbc2ff79258864a13d3c8a535489e4f2a18ad888298ccd854023f2453781ed1e588d9bcd5f2bede90b20261de12fc7f10eae4aacf239c5705bef37d80c0aed74'
            'f7a38476245a233454463ccef33af52dc62738640161de8647185ad26f1b1e3004b10e4adb3fa841b58143f502330776868e116657579be6bd3e076fed184759'
            'f1597b7b46390d786d3e2c04477ae612987508f22fada666402cf514b2b9bc99ced7f8c3b34b70fa91422ed05ac139e8d05b48c0c148f57c39ba323958aef21f')

prepare() {
  cd "${pkgname}-${_actual_ver}${_extra_ver}"

  # Port to systemd's timedated (because /etc/timezone is no longer used)
  patch -p1 -i ../0001-Get-timezone-from-systemd-s-timedate1-interface.patch
  patch -p1 -i ../0002-Not-a-phone.patch
  patch -p1 -i ../0003-Add-support-for-EDS-3.16-API.patch
}

build() {
  cd "${pkgname}-${_actual_ver}${_extra_ver}"

  export CFLAGS+=" -Wno-error"

  mkdir build
  cd build
  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib \
    -DCMAKE_INSTALL_LIBEXECDIR=/usr/lib \
    -Denable_tests=OFF

  make
}

package() {
  cd "${pkgname}-${_actual_ver}${_extra_ver}/build/"

  make DESTDIR="${pkgdir}/" install

  rm -r "${pkgdir}/usr/share/upstart/"

  # Use language packs
  rm -r "${pkgdir}/usr/share/locale/"
}
